rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Baby photos — private per-user, max 5MB, images only
    match /users/{userId}/baby-photos/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Cloud files — private per-user, max 5MB
    match /users/{userId}/files/{fileId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Shared files — authenticated read only (writes go through Cloud Function)
    match /shared-files/{fileId}/{fileName} {
      allow read: if request.auth != null;
    }
  }
}
