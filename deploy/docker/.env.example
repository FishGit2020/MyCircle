# MyCircle Docker — Runtime Environment Variables
# Copy this file to .env and fill in your API keys.

# Weather (required for weather features + AI weather tool)
OPENWEATHER_API_KEY=

# Stocks (required for stock tracker + AI stock tool)
FINNHUB_API_KEY=

# Podcasts (required for podcast player)
PODCASTINDEX_API_KEY=
PODCASTINDEX_API_SECRET=

# AI Assistant (required for AI chat)
GEMINI_API_KEY=

# reCAPTCHA (optional — AI chat bot protection)
RECAPTCHA_SECRET_KEY=

# Ollama (optional — self-hosted AI, replaces Gemini when set)
# OLLAMA_BASE_URL=https://ollama.yourdomain.com
# OLLAMA_MODEL=gemma2:2b
