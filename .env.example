# OpenWeather API (free tier)
# Get your API key from https://openweathermap.org/api
VITE_OPENWEATHER_API_KEY=your-openweather-api-key
OPENWEATHER_API_KEY=your-openweather-api-key
NODE_ENV=development
PORT=3000

# Finnhub Stock API (free tier, 60 req/min)
# Get your API key from https://finnhub.io/dashboard
FINNHUB_API_KEY=your-finnhub-api-key

# PodcastIndex API (free, unlimited)
# Register at https://api.podcastindex.org/
PODCASTINDEX_API_KEY=your-podcastindex-api-key
PODCASTINDEX_API_SECRET=your-podcastindex-api-secret

# Firebase Configuration
# Get these from Firebase Console > Project Settings > Your Apps > Web App
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Cloud Messaging (Push Notifications)
# Get this from Firebase Console > Project Settings > Cloud Messaging > Web Push certificates
VITE_FIREBASE_VAPID_KEY=your-vapid-key

# reCAPTCHA v3
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
VITE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# Google Gemini AI (for AI Assistant feature)
# Get your API key from https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key

# Ollama (Self-Hosted AI â€” optional, replaces Gemini when set)
# Point to your Ollama instance (e.g., Cloudflare Quick Tunnel to NAS)
# OLLAMA_BASE_URL=https://ollama.yourdomain.com
# OLLAMA_MODEL=gemma2:2b

# Sentry Error Tracking
# Get your DSN from https://sentry.io > Project Settings > Client Keys
VITE_SENTRY_DSN=https://your-key@o12345.ingest.us.sentry.io/your-project-id
