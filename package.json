{
  "name": "mycircle",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "pnpm build:remotes && concurrently -n server,shell,city,weather,stock,podcast,ai,bible,worship,notebook -c blue,green,yellow,magenta,cyan,white,red,#d97706,#8b5cf6,#10b981 \"pnpm dev:server\" \"pnpm dev:shell\" \"pnpm preview:city\" \"pnpm preview:weather\" \"pnpm preview:stock\" \"pnpm preview:podcast\" \"pnpm preview:ai\" \"pnpm preview:bible\" \"pnpm preview:worship\" \"pnpm preview:notebook\"",
    "dev:server": "tsx server/index.ts",
    "dev:shell": "pnpm --filter @mycircle/shell dev",
    "dev:city": "pnpm --filter @mycircle/city-search dev",
    "dev:weather": "pnpm --filter @mycircle/weather-display dev",
    "dev:stock": "pnpm --filter @mycircle/stock-tracker dev",
    "dev:podcast": "pnpm --filter @mycircle/podcast-player dev",
    "dev:ai": "pnpm --filter @mycircle/ai-assistant dev",
    "dev:bible": "pnpm --filter @mycircle/bible-reader dev",
    "dev:worship": "pnpm --filter @mycircle/worship-songs dev",
    "dev:notebook": "pnpm --filter @mycircle/notebook dev",
    "preview:city": "pnpm --filter @mycircle/city-search preview",
    "preview:weather": "pnpm --filter @mycircle/weather-display preview",
    "preview:stock": "pnpm --filter @mycircle/stock-tracker preview",
    "preview:podcast": "pnpm --filter @mycircle/podcast-player preview",
    "preview:ai": "pnpm --filter @mycircle/ai-assistant preview",
    "preview:bible": "pnpm --filter @mycircle/bible-reader preview",
    "preview:worship": "pnpm --filter @mycircle/worship-songs preview",
    "preview:notebook": "pnpm --filter @mycircle/notebook preview",
    "build:remotes": "pnpm --filter '!@mycircle/shell' --filter '!@mycircle/shared' -r --parallel build",
    "dev:mf": "concurrently \"pnpm dev:shell\" \"pnpm preview:city\" \"pnpm preview:weather\" \"pnpm preview:stock\" \"pnpm preview:podcast\" \"pnpm preview:ai\" \"pnpm preview:bible\" \"pnpm preview:worship\" \"pnpm preview:notebook\"",
    "build": "pnpm build:shared && pnpm build:mf",
    "build:shared": "pnpm --filter @mycircle/shared build",
    "build:mf": "pnpm --filter @mycircle/shell build && pnpm --filter '!@mycircle/shell' --filter '!@mycircle/shared' -r --parallel build",
    "start": "cross-env NODE_ENV=production tsx server/index.ts",
    "start:static": "node scripts/serve-static.mjs",
    "preview": "cross-env NODE_ENV=production tsx server/index.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:all": "pnpm -r typecheck",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:mf": "pnpm --filter '!mycircle' -r --parallel test:run",
    "test:all": "pnpm test:run && pnpm test:mf",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:emulator": "playwright test --config playwright.emulator.config.ts",
    "mock-api": "node scripts/mock-api-server.mjs",
    "seed:firestore": "node scripts/seed-firestore.mjs",
    "emulator:test": "concurrently -k -s first \"pnpm mock-api\" \"firebase emulators:exec --only functions,hosting,firestore,auth 'pnpm seed:firestore && pnpm test:e2e:emulator'\"",
    "firebase:build": "pnpm build:shared && pnpm firebase:build:mf && pnpm firebase:build:functions && pnpm firebase:assemble",
    "firebase:build:mf": "cross-env NODE_ENV=production pnpm --filter @mycircle/shell build && cross-env NODE_ENV=production pnpm --filter '!@mycircle/shell' --filter '!@mycircle/shared' -r --parallel build",
    "firebase:build:functions": "cd functions && pnpm install && pnpm build",
    "firebase:assemble": "node scripts/assemble-firebase.mjs",
    "firebase:deploy": "pnpm firebase:build && firebase deploy",
    "firebase:deploy:hosting": "pnpm firebase:build && firebase deploy --only hosting",
    "firebase:deploy:functions": "pnpm firebase:build:functions && firebase deploy --only functions",
    "firebase:emulators": "pnpm firebase:build && firebase emulators:start",
    "firebase:login": "firebase login",
    "analyze": "cross-env ANALYZE=true pnpm --filter @mycircle/shell build",
    "check:shared-versions": "node scripts/check-shared-versions.mjs",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist dist functions/node_modules functions/lib",
    "clean:install": "pnpm clean && pnpm install",
    "prepare": "husky"
  },
  "dependencies": {
    "@apollo/client": "^4.1.1",
    "@apollo/server": "^5.2.0",
    "@as-integrations/express4": "^1.1.2",
    "@google/genai": "^1.41.0",
    "@graphql-tools/schema": "^10.0.31",
    "@sentry/react": "^10.38.0",
    "@types/cors": "^2.8.19",
    "axios": "^1.6.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "firebase-admin": "^13.6.1",
    "firebase-functions": "^7.0.5",
    "graphql": "^16.12.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^6.0.6",
    "html-to-image": "^1.11.13",
    "node-cache": "^5.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^7",
    "sirv": "^2.0.4",
    "tsx": "^4.7.0",
    "web-vitals": "^5.1.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.1",
    "firebase-tools": "^15.5.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.33",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^4.0.17"
  }
}
