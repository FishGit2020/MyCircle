rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only read/write their own documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Notes subcollection - private per-user notes
      match /notes/{noteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Feedback collection - anyone can submit feedback (write-only inbox)
    match /feedback/{feedbackId} {
      allow create: if request.resource.data.message is string
        && request.resource.data.message.size() > 0
        && request.resource.data.message.size() <= 5000
        && request.resource.data.category in ['general', 'bug', 'feature', 'other']
        && request.resource.data.rating is number
        && request.resource.data.rating >= 0
        && request.resource.data.rating <= 5;
    }

    // Public notes - any authenticated user can read/write
    match /publicNotes/{noteId} {
      allow read, write: if request.auth != null;
    }

    // Worship songs - public read, authenticated write
    match /worshipSongs/{songId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Chinese characters - public read, authenticated write
    match /chineseCharacters/{charId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Announcements - public read, admin-only write (via Firebase console/backend)
    match /announcements/{announcementId} {
      allow read: if true;
    }
  }
}
